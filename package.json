{
  "name": "ts-hashconsing",
  "version": "0.0.2",
  "description": "Hashconsing library for TypeScript",
  "type": "module",
  "scripts": {
    "build": "npx tsc --build",
    "tests": "npx jest",
    "postinstall": "npm run build"
  },
  "author": "HATTORI, Hiroki <seagull.kamome@gmail.com> (https://github.com/seagull-kamome",
  "license": "MIT",
  "dependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.12",
    "typescript": "^4.1.2"
  },
  "devDependencies": {
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4"
  },

  "jest": {
    "moduleFileExtensions": [ "ts", "js" ],
    "transform": { "^.+\\.ts$": "ts-jest" },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [ "**/tests/**/*.test.ts" ],
    "modulePaths": [ "<rootDir>/src/" ]
  }

}
